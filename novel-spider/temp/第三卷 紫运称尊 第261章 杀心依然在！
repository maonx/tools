document.onkeydown=keypage;
var prevpage="10896221.html"
var nextpage="10920881.html"
var index_page = "/files/article/40/40109/"
function keypage() {
	if (event.keyCode==37) location=prevpage
	if (event.keyCode==39) location=nextpage
	if (event.keyCode == 13) document.location=index_page
}
lastread.set('40109', '10903103', '我欲封天', ' 第三卷 紫运称尊 第261章 杀心依然在！');
</script>
</body>
</html>